@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/css/login.css">

<div class="form-content">
    <div class="form-items">
        <h3>Login to Your Account</h3>
        <form id="account" method="post" class="requires-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="col-md-12">
                <input class="form-control" asp-for="Input.Email" placeholder="Email" required> <br>
                <div class="valid-feedback">Email field is valid!</div>
                <div class="invalid-feedback">Email field cannot be blank!</div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <input class="form-control" asp-for="Input.Password" placeholder="Password" required> <br>
                <div class="valid-feedback">Password field is valid!</div>
                <div class="invalid-feedback">Password field cannot be blank!</div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input class="form-check-input" asp-for="Input.RememberMe">
                <label class="form-check-label">Remember Me</label>
            </div>

            <div class="form-button mt-3">
                <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
            </div>

            <div>
                <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
