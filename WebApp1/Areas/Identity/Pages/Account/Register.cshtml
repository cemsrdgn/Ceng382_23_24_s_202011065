@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/register.css">

<div class="form-content">
    <div class="form-items">
        <h3>Create a New Account</h3>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="requires-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="col-md-12">
                <input class="form-control" asp-for="Input.Email" placeholder="Email" required> <br>
                <div class="valid-feedback">Email field is valid!</div>
                <div class="invalid-feedback">Email field cannot be blank!</div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <input class="form-control" asp-for="Input.Password" placeholder="Password" required> <br>
                <div class="valid-feedback">Password field is valid!</div>
                <div class="invalid-feedback">Password field cannot be blank!</div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <input class="form-control" asp-for="Input.ConfirmPassword" placeholder="Confirm Password" required> <br>
                <div class="valid-feedback">Confirm Password field is valid!</div>
                <div class="invalid-feedback">Confirm Password field cannot be blank!</div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-button mt-3">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
